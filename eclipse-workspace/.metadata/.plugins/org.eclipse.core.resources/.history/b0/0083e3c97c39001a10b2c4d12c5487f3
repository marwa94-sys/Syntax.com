package Arrays;

import java.util.Scanner;

public class First_Program {
	public static void main (String[]args) {
		
		Scanner keyboard= new Scanner(System.in);
		
		/*  PROGRAM: 
		 * Write a program that finds the sum and the average
		 * of positive integers stored in an array of integers.
		*/
		System.out.println("Entre the size of arrays:");
		int size, sum=0, count=0;
		size=keyboard.nextInt();
		double[]numbers= new double[size];
		
		for (int i=0;i<numbers.length;i++)
		{
			System.out.println("Entre Number :"+(i+1));
			numbers[i]=keyboard.nextDouble()
;			 if (numbers[i]>=0) 
			 {
				sum+=numbers[i];
				count++;
			 }
          System.out.println("The average is   "+ sum/count);
            	 
            	 
		}
		
		
	}

}
